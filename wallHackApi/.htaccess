php_value display_errors 1
# DO NOT REMOVE OR MODIFY THIS LINE AND THE LINES ABOVE HTID:6955100:

AddDefaultCharset utf-8
AddType application/x-httpd-php .php

    Options +FollowSymLinks
    Options -Indexes
    DirectoryIndex www/index.php
    
    RewriteEngine On
    RewriteBase /api/
     
RewriteRule ^([a-z]+)/([a-z]+)/([0-9]+)/$ /api/?controller=$1&action=$2&id=$3&%{QUERY_STRING} [NS,L]
RewriteRule ^([a-z]+)/([a-z]+)/([0-9]+)/([a-z]+)/$ /api/?controller=$1&action=$2&id=$3&sort=$4&%{QUERY_STRING} [NS,L]
RewriteRule ^([a-z]+)/([a-z]+)/([0-9]+)/([a-z]+)/([a-z]+)/$ /api/?controller=$1&action=$2&id=$3&sort=$4&sortType=$5&%{QUERY_STRING} [NS,L]
RewriteRule ^([a-z]+)/([a-z]+)/$ /api/?controller=$1&action=$2&%{QUERY_STRING} [NS,L]
RewriteRule ^([a-z]+)/([a-z]+)/$ /api/?controller=$1&id=$2&%{QUERY_STRING} [NS,L]
RewriteRule ^([a-z]+)/$ /?controller=$1&%{QUERY_STRING} [NS,L]
RewriteRule ^([a-z]+)/([0-9]+)/$ /api/?controller=$1&id=$2&%{QUERY_STRING} [NS,L]

RewriteRule ^([a-z]+)/([a-z]+)/([a-z]+)/$ /api/?controller=$1&action=$2&name=$3&%{QUERY_STRING} [NS,L]

    RewriteCond $1 !^(index\.php)
    RewriteCond %{REQUEST_URL} !\.(css|js|jpg|gif)$
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L,QSA]

